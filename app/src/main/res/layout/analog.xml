<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/analog_device_image"/>

    <Button
        android:id="@+id/analog_loadbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="75dp"
        android:text="불러오기"
        android:textSize="18sp" />

    <Button
        android:id="@+id/analog_startbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="110dp"
        android:text="저장"
        android:textSize="18sp" />

    <Button
        android:id="@+id/analog_stopbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="40dp"
        android:text="정지"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:rotationX="0">


        <EditText
            android:id="@+id/analog_addr_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="아이피 주소"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_device_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="기기 이름"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_rotation_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="화면 각도"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_minimum_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="최소값"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_maximum_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="최대값"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_unit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="단위"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_minangle_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="최소 각도 입력"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/analog_maxangle_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="최대 각도 입력"
            android:inputType="textPersonName" />

    </LinearLayout>

</RelativeLayout>