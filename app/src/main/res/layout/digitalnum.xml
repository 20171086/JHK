<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/digitalnum_device_image"/>

    <Button
        android:id="@+id/digitalnum_startbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="180dp"
        android:text="저장"
        android:textSize="18sp" />

    <Button
        android:id="@+id/digitalnum_loadbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="130dp"
        android:text="불러오기"
        android:textSize="18sp" />

    <Button
        android:id="@+id/digitalnum_stopbtn"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="80dp"
        android:text="정지"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/digitalnum_addr_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="아이피 주소"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/digitalnum_device_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="기기 이름"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/digitalnum_rotation_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="화면각도"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/digitalnum_boxnum_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="인식해야할 갯수"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/digitalnum_boxscale_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="박스 크기"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/digitalnum_boxpos_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="박스 위치"
            android:inputType="textPersonName" />

    </LinearLayout>

</RelativeLayout>